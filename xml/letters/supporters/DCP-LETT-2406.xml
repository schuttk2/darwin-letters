                    <note xml:id="tnote.n2">3.4 viz] <hi rend="italic">interl</hi></note>
                    <note xml:id="tnote.n3">4.4 Hides &amp; wool] ‘wool’ <hi rend="italic">altered from</hi> ‘wood’</note>
                    <note xml:id="tnote.n4">4.7 Australian] <hi rend="italic">interl</hi></note>
